@page
@model SVU_University.Pages.CourseUpdateModel
@{
    ViewData["Title"] = "CourseUpdate";
}

        <div class="section-body">
          <h2 class="section-title"> Update Course </h2>
          <div class="row">
            <div class="tab-content col-xl-12 col-lg-12 col-md-12 col-sm-12 m-auto">
            
              <div class="card">
                <div class="card-body">
                  <div class="tab-content" id="myTabContent2">
                    <div class="tab-pane fade show active" id="aform" role="tabpanel" aria-labelledby="aform-tab3">
                      
                      <div class="card-body">
                        <div class="row">
                          <div class="col-md-12">
                            <div class="form-group">
                              <label> Course Code <span class="required ml-1">*</span></label>
                              <input type="text" class="form-control" placeholder="B.Com">  
                            </div>
                          </div>
                          <div class="col-md-12">
                            <div class="form-group">
                              <label> Course Title <span class="required ml-1">*</span></label>
                              <input type="text" class="form-control" placeholder="Bachelor of Commerce"> 
                            </div>
                          </div>
                          <div class="col-md-12">
                            <div class="form-group">
                              <label>Status<span class="required ml-1">*</span> </label>
                              <select class="form-control select2" data-placeholder="Status">
                                <option value="0" selected> UG  </option>
                                <option value="1"> UG </option>
                                <option value="2"> PG </option>
                                <option value="3"> Dipl </option>
                              </select>
                            </div>
                          </div>
                          <div class="col-md-12">
                            <div class="form-group">
                              <label>Status<span class="required ml-1">*</span> </label>
                              <select class="form-control select2" data-placeholder="Status">
                                <option value="0" selected> Deleted  </option>
                                <option value="1"> Available </option>
                                <option value="2"> Blocked </option>
                                <option value="3"> Deleted </option>
                                <option value="4"> Removed </option>
                              </select>
                            </div>
                          </div>
                          <div class="col-md-6">
                             <a href="Course" class="btn btn-dark "> <i class="fas fa-arrow-left"></i> Back </a>
                          </div> 
                          <div class="col-md-6 text-right">
                              <button class="btn btn-primary btnNext text-end"> Update <i class="fas fa-arrow-right"></i></button>
                          </div>
                        </div>																
                      </div>
                    </div>															
                   </div>
                  </div>
                </div>
              </div>
            </div>
          </div>