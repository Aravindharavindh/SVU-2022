                                  <label type="text" readonly class="form-control-valuetext form-control-lg"> Available </label>
                                </div>
                              </div>
                          </form>
                          <div class="row">
                              <div class="col-md-12">
                                   <a href="CourseGroup" class="btn btn-dark "> <i class="fas fa-arrow-left"></i> Back </a>
                              </div>
                            </div>
                        </div>  
                      </div>
                  </div>
                </div>
            </div>