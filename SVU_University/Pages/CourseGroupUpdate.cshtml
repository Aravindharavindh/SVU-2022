@page
@model SVU_University.Pages.CourseGroupUpdateModel
@{
    ViewData["Title"] = "CourseGroupUpdate";
}

        <div class="section-body">
          <h2 class="section-title"> Update Course Group </h2>
          <div class="row">
            <div class="tab-content col-xl-12 col-lg-12 col-md-12 col-sm-12 m-auto">
              <div class="card">
                <div class="card-body">
                  <div class="tab-content" id="myTabContent2">
                    <div class="tab-pane fade show active" id="aform" role="tabpanel" aria-labelledby="aform-tab3">
                        
                      <div class="card-body">
                        <div class="row">
                          <div class="col-md-6">
                            <div class="form-group">
                              <label> Course Group Code <span class="required ml-1">*</span></label>
                              <input type="text" class="form-control " placeholder="B.Com(Accounts)">  
                            </div>
                          </div>
                          <div class="col-md-6">
                            <div class="form-group">
                              <label> Course Group Title <span class="required ml-1">*</span></label>
                              <input type="text" class="form-control " placeholder="Bachelor of Commerce (Accounts)"> 
                            </div>
                          </div>
                          <div class="col-md-6">
                            <div class="form-group">
                              <label>Course<span class="required ml-1">*</span> </label>
                              <select class="form-control select2" data-placeholder="Status">
                                <option value="0" selected> B.Com </option>
                                <option value="1"> B.Com </option>
                                <option value="2"> M.Com </option>
                                <option value="3"> B.A </option>
                              </select>
                            </div>
                          </div>
                          <div class="col-md-6">
                            <div class="form-group">
                              <label> Total Academic <span class="required ml-1">*</span></label>
                              <input type="number" class="form-control " placeholder="3"> 
                            </div>
                          </div>
                          <div class="col-md-6">
                            <div class="form-group">
                              <label> Period Term <span class="required ml-1">*</span> </label>
                              <select class="form-control select2" data-placeholder="Status">
                                <option value="0" selected> 1st Term </option>
                                <option value="1"> 1st Term </option>
                                <option value="2"> 2nd term </option>
                              </select>
                            </div>
                          </div>
                          <div class="col-md-6">
                            <div class="form-group">
                              <label>Status<span class="required ml-1">*</span> </label>
                              <select class="form-control select2" data-placeholder="Status">
                                <option value="0" selected> Available  </option>
                                <option value="1"> Available </option>
                                <option value="2"> Blocked </option>
                                <option value="3"> Deleted </option>
                                <option value="4"> Removed </option>
                              </select>
                            </div>
                          </div>
                          <div class="col-md-6">
                             <a href="CourseGroup" class="btn btn-dark"> <i class="fas fa-arrow-left"></i> Back </a>
                          </div> 
                          <div class="col-md-6 text-right">
                              <button class="btn btn-primary btnNext text-end"> Update <i class="fas fa-arrow-right"></i></button>
                          </div>
                        </div>																
                      </div>
                    </div>															
                   </div>
                  </div>
                </div>
              </div>
            </div>
          </div>